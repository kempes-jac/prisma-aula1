generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Courses {
  id              String            @id @default(uuid())
  name            String            @unique
  description     String?
  duration        Int
  create_at       DateTime          @default(now())
  courses_modules courses_modules[] @relation("coursesTocourses_modules")

  @@map("courses")
}

model Modules {
  id              String            @id @default(uuid())
  name            String            @unique
  description     String?
  created_at      DateTime          @default(now())
  courses_modules courses_modules[] @relation("courses_modulesTomodules")

  @@map("modules")
}

model courses_modules {
  id_course  String
  id_module  String
  created_at DateTime @default(now()) @db.Timestamp(6)
  courses    Courses  @relation("coursesTocourses_modules", fields: [id_course], references: [id], onDelete: NoAction, onUpdate: NoAction)
  modules    Modules  @relation("courses_modulesTomodules", fields: [id_module], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@id([id_course, id_module])
}
